# {{ domain | title }} Domain Configuration
# Generated by: agentura create skill {{ domain }}/{{ skill_name }}

domain:
  name: {{ domain }}
  description: "{{ domain | replace('-', ' ') | title }} domain skills"
  owner: team-{{ domain }}

skills:
  - name: {{ skill_name }}
    path: ./SKILL.md
    role: {{ role }}
    model: anthropic/claude-sonnet-4.5
    cost_budget: "$0.10"
    triggers:
      - type: manual

# Routing Rules (Config-Driven, NOT Code)
routing: []

# Guardrails (Enforced at Runtime)
guardrails:
  budget:
    max_cost_per_execution: "$0.50"
  rate_limits:
    max_executions_per_minute: 10

# Observability (DEC-008: Three-Tier)
observability:
  metrics:
    - name: {{ domain }}_{{ skill_name | replace("-", "_") }}_executions_total
      type: counter
      labels: [skill, domain, outcome]
    - name: {{ domain }}_{{ skill_name | replace("-", "_") }}_latency_seconds
      type: histogram
      labels: [skill]
  logs:
    destination: langfuse
    capture:
      - skill_input
      - skill_output
      - reasoning_trace
      - user_corrections
  traces:
    destination: opik
    capture:
      - tool_calls
      - latency_breakdown

# Feedback Loop (DEC-006: Corrections â†’ Tests)
feedback:
  capture_corrections: true
  auto_generate_tests: true
  test_framework: deepeval
  learning_strategy:
    type: reflexion
    storage: episodic_memory
  regression_tests:
    generate_on_correction: true
    framework: promptfoo
    save_to: ./tests/generated/

# MCP Tools Available to Skills
mcp_tools: []
